{% extends "::base.html.twig" %}

{% block title %}Page de l'annonce{% endblock %}

{% block body %}
    <div class="container">

        {% if article_page is defined %}
            <h1 class="text-center">Recherche de "{{ article_page.title }}"</h1>

                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">Titre</th>
                                    <th class="text-center">Description</th>
                                    <th class="text-center">Photo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-center">{{ article_page.title }}</td>
                                    <td class="text-center">{{ article_page.description }}</td>
                                    <td class="text-center"><img class="img_cadre" src="{{ vich_uploader_asset(article_page, 'photoFile') }}" alt="photo_annonce"></td>
                                </tr>
                            </tbody>
                        </table>

                        <form>
                            <button class="btn btn-info" type="button" onclick="history.go(-1)">Revenir</button>
                        </form>
                    </div>
                </div>
        {% endif %}
    </div>
{% endblock %}
